{% extends 'organization/base.html.twig' %}

{% block title %}{{ 'nav.section.organization' | trans }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <h1>{{ 'organization.asset.availabilities' | trans }} - {{ app.user }}</h1>

    <div class="row">
        <div class="col-12 text-right mb-2">
            <a class="btn btn-success" href="{{ path('app_organization_assetType_new') }}" role="button">Ajouter</a>
        </div>
    </div>

    <div class="row">
        <table class="table table-striped">
            <thead class="thead-light">
            <tr>
                <th>{{ 'common.name' | trans }}</th>
                <th class="actions">{{ 'common.actions' | trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for assetType in assetTypes %}
                <tr>
                    <td>{{ assetType.name }}</td>
                    <td>
                        <a href="{{ path('app_organization_assetType_edit', { id: assetType.id }) }}" class="btn btn-outline-secondary">{{ 'action.edit' | trans }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
